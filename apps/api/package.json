    "test:e2e": "vitest run --config ./test/vitest.config.e2e.mts",
    "lint": "biome check .",
    "check-types": "tsc --noEmit",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@repo/api": "workspace:*",
    "@repo/database": "workspace:^",
    "@repo/shared": "workspace:^",
    "@repo/storage": "workspace:*",
    "bullmq": "^5.67.2",
    "date-fns": "^4.1.0",
    "drizzle-orm": "catalog:",
    "escape-html": "^1.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
