    "@vitest/coverage-v8": "^1.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "5.5.4",
    "unplugin-swc": "^1.4.5",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^1.6.0"
